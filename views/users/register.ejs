<% layout('layouts/boilerplate') %>
<div class="row">
    <div class="col-md-6 offset-md-3 col-xl-4 offset-xl-4">
       <div class="card shadow">
        <img src="https://images.unsplash.com/photo-1602391833977-358a52198938?q=80&w=1974&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D"
            alt="" class="card-img-top" />
          <div class="card-body">
             <h5 class="card-title">Register</h5>
             <form action="/register" class="validated-form" novalidate method="POST">
                <div class="mb-3">
                    <label class="form-label" for="username">Username:</label>
                    <input class="form-control" type="text" id="username" name="username" required>
                    <div class="valid-feedback">
                        Looks good!
                    </div>  
                </div>  
                <div class="mb-3">
                    <label class="form-label" for="email">Email:</label>
                    <input class="form-control" type="email" id="email" name="email" required>
                    <div class="valid-feedback">
                        Looks good!
                    </div>  
                </div>  
                <div class="mb-3">
                    <label class="form-label" for="password">Password:</label>
                    <input class="form-control" type="password" id="password" name="password" required>
                    <div class="valid-feedback">
                        Looks good!
                    </div>  
                </div>  
                <div class="d-grid gap-2">
                    <button class="btn btn-success btn-primary">Register</button>
                </div>
          </div>
       </div>
    </div>
 </div>
</form>    